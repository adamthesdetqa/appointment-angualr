{
  "lineWidth": 120,
  "indentWidth": 2,
  "newLineKind": "lf",
  "useTabs": false,
  "typescript": {
    "associations": ["**/*.{js,ts,mjs}"],
    "quoteStyle": "alwaysSingle",
    "quoteProps": "asNeeded",
    "useBraces": "always",
    "bracePosition": "sameLine",
    "singleBodyPosition": "nextLine",
    "trailingCommas": "never",
    "importDeclaration.preferSingleLine": true,
    "arrowFunction.useParentheses": "force",
    "typeAssertion.spaceBeforeExpression": false,
    "arguments.preferHanging": "always"
  },
  "json": {
    "associations": ["**/*.{json,jsonc}"],
    "trailingCommas": "never"
  },
  "markdown": {
    "associations": ["**/*.md"]
  },
  "malva": {
    "associations": ["**/*.{css,scss}"],
    "quotes": "alwaysSingle",
    "blockSelectorLinebreak": "always"
  },
  "prettier": {
    "associations": ["**/*.{html,yml,yaml}"],
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSameLine": true
  },
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/build",
    "**/dist",
    "**/.turbo",
    "/.pnpm-store",
    "pnpm-lock.yaml",
    "/.husky",
    "/ng-client/.angular",
    "/ng-client/cov",
    "api/src/types/schema.d.ts"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.91.3.wasm",
    "https://plugins.dprint.dev/json-0.19.3.wasm",
    "https://plugins.dprint.dev/markdown-0.17.1.wasm",
    "https://plugins.dprint.dev/g-plane/malva-v0.5.1.wasm",
    "https://plugins.dprint.dev/prettier-0.40.0.json@68c668863ec834d4be0f6f5ccaab415df75336a992aceb7eeeb14fdf096a9e9c"
  ]
}
